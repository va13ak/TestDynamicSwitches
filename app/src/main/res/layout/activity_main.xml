<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="345dp"
        android:layout_height="513dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnRefresh"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/tvRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnRegistration" />

        <View style="@style/Divider"
        android:id="@+id/divider"/>
        <!--android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>-->

        <EditText
            android:id="@+id/etINN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titleINN"
            android:inputType="number"
            android:text="" />

        <EditText
            android:id="@+id/etRegNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titleRegNumber"
            android:inputType="number"
            android:text="" />

        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnRegistration" />

        <Button
            android:id="@+id/btnReRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnReRegistration" />

        <Button
            android:id="@+id/btnArchiveClosure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnArchiveClosure" />



    </LinearLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>